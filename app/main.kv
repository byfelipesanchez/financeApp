
<AccountWindow>
    name: "create"

    name1: name1
    password: password
    email: email

    FloatLayout:

        FloatLayout:
            size: root.width, root.height/2


            MDLabel:
                text: "Create an Account"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}


            MDLabel:
                size_hint: 0.5,0.12
                pos_hint: {"x":0.2, "top":0.8}
                text: "Name: "


            MDTextField:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                id: name1
                multiline: False

            MDLabel:
                size_hint: 0.5,0.12
                pos_hint: {"x":0.2, "top":0.8-0.13}
                text: "Email: "


            MDTextField:
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.4, 0.12
                id: email
                multiline: False


            MDLabel:
                size_hint: 0.5,0.12
                pos_hint: {"x":0.2, "top":0.8-0.13*2}
                text: "Password: "


            MDTextField:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.12
                id: password
                multiline: False
                password: True


            MDRoundFlatButton:
                pos_hint: {"x":0.2, "y":0.05}
                text: "Have An Account? Log In"
                on_release:
                    root.manager.transition.direction = "left"
                    root.login()

            MDRoundFlatButton:
                pos_hint: {"x":0.2, "y":0.2}
                size_hint: 0.6, 0.15
                text: "Enter"

                on_release:
                    root.manager.transition.direction = "left"
                    root.submit()

<LoginWindow>:
    name: "login"

    email: email
    password: password

    FloatLayout
        MDLabel:
            text:"Email: "
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.35, 0.15

        MDTextField:
            id: email
            multiline: False
            pos_hint: {"x": 0.45 , "top":0.9}
            size_hint: 0.4, 0.15

        MDLabel:
            text:"Password: "
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.35, 0.15

        MDTextField:
            id: password
            multiline: False
            password: True
            pos_hint: {"x": 0.45, "top":0.7}
            size_hint: 0.4, 0.15

        MDRoundFlatButton:
            pos_hint: {"x":0.2, "y":0.05}
            size_hint: 0.6, 0.1
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.login_button()

        MDRoundFlatButton:
            pos_hint: {"x":0.2, "y":0.25}
            size_hint: 0.6, 0.1
            text: "Create Account"
            on_release:
                root.manager.transition.direction = "right"
                root.create_button()

<MainWindow>
    n: n
    email: email
    password: password
    created: created

    FloatLayout:
        MDLabel:
            id: n
            pos_hint:{"x": 0.1, "top":0.9}
            size_hint:0.8, 0.2
            text: "Account Name: "
        MDLabel:
            id: password
            pos_hint:{"x": 0.1, "top":0.6}
            size_hint:0.8, 0.2
            text: "Your Password Is: "
        MDLabel:
            id: created
            pos_hint:{"x": 0.1, "top":0.7}
            size_hint:0.8, 0.2
            text: "This account was created on: "
        MDLabel:
            id: email
            pos_hint:{"x": 0.1, "top":0.8}
            size_hint:0.8, 0.2
            text: "Email: "

        MD



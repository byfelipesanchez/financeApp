
<AccountWindow>
    name: "create"

    name1: name1
    password: password
    email: email

    FloatLayout:
        cols: 1

        FloatLayout:
            size: root.width, toot.height/2

            Label:
                text: "Create Account"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 +  root.height**2) / 14**4

            Label:
                size_hint: 0.5, 0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Name: "
                font_size: (root.width**2 +  root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top": 0.8}
                size_hint: 0.4, 0.12
                id: name1
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5, 0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Email: "
                font_size: (root.width**2 +  root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top": 0.8}
                size_hint: 0.4, 0.12
                id: email
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5, 0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Password: "
                font_size: (root.width**2 +  root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top": 0.8}
                size_hint: 0.4, 0.12
                id: password
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            MDRoundFlatButton:
                pos_hint: {"x":0.3, "y":0.25}
                size_hint: 0.4, 0.1
                font_size: (root.width**2 + root.height**2) / 14**4
                text: "Have An Account? Log In"
                on_release:
                    root.manager.transition.direction = "left"
                    root.submit()

            MDRoundFlatButton:
                pos_hint: {"x":0.2, "y":0.05}
                size_hint: 0.6, 0.15
                text: "Enter"
                font_size: (root.width**2 + root.height**2) / 14**4
                on_release:
                    root.manager.transition.direction = "left"
                    root.submit()

<LoginWindow>:
    name: "login"

    email: email
    password: password

    FloatLayout:

        Label:
            size_hint: 0.35,0.15
            pos_hint: {"x":0.1, "top":0.9}
            text: "Email: "
            font_size: (root.width**2 + root.height**2) / 13**4


        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.45, "top":0.9}
            size_hint: 0.4, 0.15

        Label:
            size_hint: 0.35,0.15
            pos_hint: {"x":0.1, "top":0.9}
            text: "Password: "
            font_size: (root.width**2 + root.height**2) / 13**4

        TextInput:
            id: password
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.45, "top":0.9}
            size_hint: 0.4, 0.15

        MDRoundFlatButton:
            pos_hint: {"x":0.2, "y":0.05}
            size_hint: 0.6, 0.2
            text: "Login"
            font_size: (root.width**2 + root.height**2) / 13**4
            on_release:
                root.manager.transition.direction = "up"
                root.loginButton()

        MDRoundFlatButton:
            pos_hint: {"x":0.3, "y":0.3}
            size_hint: 0.4, 0.1
            text: "Don't Have An Account? Click Here to Create One"
            font_size: (root.width**2 + root.height**2) / 17**4
            on_release:
                root.manager.transition.direction = "right"
                root.createButton()

<MainWindow>
    m: n
    email: email
    created: created
    password: password

    FloatLayout:
        Label:
            id: n
            pos_hint:{"x": 0.1, "top": 0.9}
            size_hint:0.8, 0.2
            text: "Hello, "

        Label:
            id: email
            pos_hint:{"x": 0.1, "top": 0.7}
            size_hint:0.8, 0.2
            text: "Your Email: "

        Label:
            id: created
            pos_hint:{"x": 0.1, "top": 0.5}
            size_hint:0.8, 0.2
            text: "This Account Was Created On: "

        MDRoundFlatButton:
            pos_hint:{"x":0.2, "y": 0.1}
            size_hint: 0.6, 0.2
            text: "Log Out"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"

